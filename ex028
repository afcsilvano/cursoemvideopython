import random
import time
n = int(input('Estou pensando em um número entre 0 e 5, qual você acha que é? '))
na = random.randint(0, 5)
print('AGUARDE...')
time.sleep(3)
if(n == na):
    print('Parabéns! Você acertou. Eu realmente estava pensando em {}!'.format(na))
else:
    print('hmm, você errou, eu estava pensando no número {}, tente novamente.'.format(na))
